      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>



  <body>

    <div class="container" >

      <form class="form-signin" method="post" >
        <h2 class="form-signin-heading">Please register</h2>
        
        <%- errorRegister %>

        <label for="inputLogin" class="sr-only">Login</label>
        <input type="Login" id="inputLogin" name="inputLogin" class="form-control" placeholder="Login" required autofocus>

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="Password" id="inputPassword" name="inputPassword"  class="form-control" placeholder="Password" required style="margin:0px">

        <label for="inputPassword" class="sr-only">SamePassword</label>
        <input type="Password" id="inputSamePassword" name="inputSamePassword" class="form-control" placeholder="SamePassword" required>
       
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>

        <a href="\" class="btn btn-link">Return to the main page</a>
      </form>

    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
